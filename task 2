    <script>
        // Dummy data to simulate account existence
        const accounts = [
            { username: 'user1', password: 'password1' },
            { username: 'user2', password: 'password2' }
        ];

        // Show login form
        function showLoginForm() {
            document.getElementById('loginFormContainer').style.display = 'flex';
            document.getElementById('signUpFormContainer').style.display = 'none'; // Hide sign-up form
        }

        // Show sign-up form
        function showSignUpForm() {
            document.getElementById('signUpFormContainer').style.display = 'flex';
            document.getElementById('loginFormContainer').style.display = 'none'; // Hide login form
        }

        // Login process
        function login() {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            
            const account = accounts.find(acc => acc.username === username);

            // Account exists
            if (account && account.password === password) {
                document.getElementById('loginSuccess').style.display = 'block';
                document.getElementById('loginMessage').style.display = 'none';
                document.getElementById('signUpMessage').style.display = 'none';

                // Redirect to content page after 2 seconds
                setTimeout(() => {
                    document.getElementById('loginFormContainer').style.display = 'none';
                    document.getElementById('contentPage').style.display = 'block';
                }, 2000); // Wait for 2 seconds before redirecting
            } 
            // Account does not exist
            else if (account && account.password !== password) {
                document.getElementById('loginMessage').style.display = 'block';
                document.getElementById('loginSuccess').style.display = 'none';
                document.getElementById('signUpMessage').style.display = 'none';
            }
            // Account doesn't exist at all
            else {
                document.getElementById('signUpMessage').style.display = 'block';
                document.getElementById('loginMessage').style.display = 'none';
                document.getElementById('loginSuccess').style.display = 'none';
            }
        }

        // Sign up process
        function signUp() {
            const newUsername = document.getElementById('newUsername').value;
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            if (newPassword === confirmPassword) {
                // Add new account to the list (in a real-world scenario, this would involve backend logic)
                accounts.push({ username: newUsername, password: newPassword });
                alert("Account created successfully!");
                showLoginForm(); // After sign-up, show login form again
            } else {
                document.getElementById('signUpMessage').style.display = 'block';
            }
        }
    </script>
